<h1>Foo controller, index action</h1>
 
<table>
  <tr>
    <th>id</th>
    <th>bar</th>
 
    <th colspan="3">Actions</th>
  </tr>
 
<% @foos.each do |foo| %>
  <tr>
    <td><%=h foo.id %></td>
    <td><%=h foo.bar %></td>
 
    <td><%= link_to 'Show', resource(foo) %></td>
    <td><%= link_to 'Edit', resource(foo, :edit) %></td>
    <td><%= delete_button(foo, "Delete #{foo.id}") %></td>
  </tr>
<% end %>
</table>
 
<%= link_to 'New', resource(:foos, :new) %>
